<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimage"
    android:padding="10dp"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="37dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="Welcome to Zero Gravity Fitness.\nPlease Login or Register to Continue."/>

    <ImageView
        android:id="@+id/login"
        android:layout_width="165dp"
        android:layout_height="118dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/login"
        android:layout_below="@+id/text"
        />

    <EditText
        android:id="@+id/username1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:hint="Username" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnsignin1"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_below="@+id/password1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="95dp"
        android:text="Login" />

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_below="@+id/btnsignin1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="95dp"
        android:text="Register" />

    <TextView
        android:id="@+id/support"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:layout_marginLeft="80dp"
        android:layout_width="250dp"
        android:text="Need help? Connect with us!"
        android:layout_height="20dp"
        android:layout_below="@+id/btnsignup"/>


    <ImageView
        android:id="@+id/messages"
        android:layout_below="@+id/support"
        android:layout_marginTop="30dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="130dp"
        android:src="@drawable/messages"
        android:onClick="OpenMessage"/>

    <ImageView
        android:layout_toRightOf="@+id/messages"
        android:layout_marginTop="585dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/call"
        android:onClick="OpenCall"/>


</RelativeLayout>